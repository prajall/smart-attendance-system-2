{
  "compilerOptions": {
    "baseUrl": ".",   
    "paths": {
      "@/*": ["src/*"]   
    },
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types", "./src/types"]

  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
